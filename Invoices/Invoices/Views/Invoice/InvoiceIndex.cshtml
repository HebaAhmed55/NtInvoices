@model IEnumerable<Collection.DAL.Invoice>
@{
    ViewBag.Title = "InvoiceIndex";
}

<h2>InvoiceIndex</h2>


<p>
    @Html.ActionLink("Create New", "CreateInvoice")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CollectDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActCollectDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Suspended)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Collected)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment.Comment1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollectDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActCollectDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suspended)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment.Comment1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditInvoice", new { id = item.InvoiceId }) |
                @Html.ActionLink("Delete", "DeleteInvoice", new { id = item.InvoiceId })
            </td>
        </tr>
    }

</table>
