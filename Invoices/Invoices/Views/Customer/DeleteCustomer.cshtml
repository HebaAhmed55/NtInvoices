@model Collection.DAL.Customer
@{
    ViewBag.Title = "DeleteCustomer";
}

<h2>DeleteCustomer</h2>



<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CustomerNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Customer", new { id = @Model.CustomerId }))
    {
         @Html.AntiForgeryToken()
         <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
             <a href="@Url.Action("CustomerIndex", "Index")" class="btn btn-default ">
                 <i class="icon-pencil icon-white"></i>
                 <span>
                     <strong>Cancel</strong>
                 </span>
             </a>
          
        </div>
    }
</div>